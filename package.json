{
  "name": "platform",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "directus": "^10.6.1",
    "knex": "^2.5.1",
    "mysql": "^2.18.1"
  },
  "engines": {
    "node": "18.18.0"
  },
  "scripts": {
    "dev": "CONFIG_PATH='.env-development' npx directus start",
    "build": "CONFIG_PATH='.env' npx directus start",
    "bootstrap": "npx directus bootstrap",
    "baseline": "npx directus schema snapshot ./snapshots/init.yaml",
    "refresh": "npx directus bootstrap && npx directus schema apply ./snapshots/init.yaml",
    "snapshot": "npx directus schema snapshot ./snapshots/\"$(date \"+%F\")\"-snapshot-\"$(date \"+%s\")\".yaml",
    "migrate": "npx directus database migrate:latest",
    "prisma:setup": "npx prisma init"
  },
  "devDependencies": {
    "prisma": "^5.2.0"
  }
}
