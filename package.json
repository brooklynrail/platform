{
  "name": "platform",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "directus": "10.8.2"
  },
  "engines": {
    "node": "18.18.0"
  },
  "scripts": {
    "dev": "CONFIG_PATH='.env.local' npx directus start",
    "build-local": "yarn bootstrap && yarn refresh && yarn dev",
    "build": "npx directus bootstrap && npx directus schema apply --yes snapshots/init.yaml && npx directus start",
    "bootstrap": "CONFIG_PATH='.env.local' npx directus bootstrap",
    "refresh": "CONFIG_PATH='.env.local' npx directus schema apply --yes snapshots/init.yaml",
    "snapshot": "CONFIG_PATH='.env.local' npx directus schema snapshot --yes ./snapshots/init.yaml",
    "migrate": "CONFIG_PATH='.env.local' npx directus database migrate:latest",
    "download": "CONFIG_PATH='.env.local' node snapshots/download"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  }
}
