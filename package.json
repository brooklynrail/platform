{
  "name": "platform",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "directus": "^10.7.1"
  },
  "engines": {
    "node": "18.18.0"
  },
  "scripts": {
    "dev": "CONFIG_PATH='.env-development' npx directus start",
    "build": "CONFIG_PATH='.env' npx directus bootstrap && npx directus schema apply --yes snapshots/init.yaml && npx directus start",
    "bootstrap": "CONFIG_PATH='.env-development' npx directus bootstrap",
    "baseline": "CONFIG_PATH='.env-development' npx directus schema snapshot ./snapshots/init.yaml",
    "refresh": "CONFIG_PATH='.env-development' npx directus bootstrap && CONFIG_PATH='.env-development' npx directus schema apply snapshots/init.yaml",
    "snapshot": "npx directus schema snapshot ./snapshots/\"$(date \"+%F\")\"-snapshot-\"$(date \"+%s\")\".yaml",
    "migrate": "npx directus database migrate:latest",
    "download": "CONFIG_PATH='.env-development' node snapshots/download"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  }
}
